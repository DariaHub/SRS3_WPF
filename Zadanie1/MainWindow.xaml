        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="278" Margin="20" TextWrapping="Wrap"  VerticalAlignment="Top" Width="235"  />
        <Button Width="120" Height="30" Margin="10" BorderBrush="#FF330A42" Background="#FFC5BFEE" Click="Button_Click"> Вывести события</Button>
        </StackPanel>
    </Grid>
